"jest": {
  "preset": "jest-preset-angular",
  "setupFilesAfterEnv": [
    "<rootDir>/setup-jest.ts"
  ],
  "testMatch": [
    "**/src/**/*.spec.ts" 
  ],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "transform": {
    "^.+\\.(ts|js|mjs|html)$": [
      "jest-preset-angular",
      {
        "tsconfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.(html|svg)$"
      }
    ]
  },
  "collectCoverage": true
}